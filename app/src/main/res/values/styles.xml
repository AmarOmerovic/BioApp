<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="nameStyle">
        <item name="android:padding">10sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">8sp</item>
    </style>

    <style name="bioStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.35</item>
        <item name="android:padding">@dimen/bio_padding</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14.3sp</item>
    </style>

    <style name="textViewStyle" parent="nameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>